{% extends '_templates/base.njk' %}

{% set relative_path = "../" %}

{% block page_title %}{{ album_name }}{% endblock %}

{% block page_description %}{{ album_name }} released in {{ year}} {% endblock %}

{% block content %}
  <article class="container">
    <section class="container">
      <div class="row">
        <div class="col-md-6 col-lg-4">
          <figure class="figure">
            <img src="../img/album-photos/{{slug}}.jpg" alt="{{album_name}} album cover">
          </figure>
        </div>
        <div class="col-md-6 col-lg-8">
          <h1>{{ album_name }}</h1>
          <h4> {{rank}} / 10</h4>
          <a href="albums/{{album.slug}}.html" class="card-link"> Listen to {{album_name}} on Spotify. </a>
          <p>{{ blurb | safe }}. Released in {{ year }}.</p>
        </div>
      </div>
    </section> 
    <section class="container">
    </section>
  </article>
{% endblock %}
